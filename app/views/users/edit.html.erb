<% provide(:title, "Edit users") %>
<h1>Users#new</h1>
<p>Find me in app/views/users/new.html.erb</p>

<h1>Update your profile</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.text_field :password %>

      <%= f.label :password_confirmation, "Confirma" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Save change", class: "btn btn" %>
  <% end %>
  <%= gravatar_for @user %>
  <a href="http://gravatar.com/emails">change</a>
  </div>
</div>